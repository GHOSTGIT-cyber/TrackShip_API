# api/.htaccess
# Redirection de toutes les requêtes vers index.php (sauf fichiers existants)

<IfModule mod_rewrite.c>
    RewriteEngine On

    # Ne pas rediriger les fichiers qui existent réellement
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d

    # Rediriger tout vers index.php en conservant les query strings
    RewriteRule ^(.*)$ index.php [QSA,L]
</IfModule>

# Headers CORS globaux (au cas où)
<IfModule mod_headers.c>
    Header set Access-Control-Allow-Origin "*"
    Header set Access-Control-Allow-Methods "GET, POST, OPTIONS"
    Header set Access-Control-Allow-Headers "Content-Type, Authorization"
</IfModule>
